{
  "name": "rpjournal-backend",
  "version": "0.0.0",
  "description": "A journaling tool for holding RPG session notes",
  "scripts": {
    "deploy": "prisma deploy --env-file .env",
    "dev": "nodemon --config nodemon.json -e js,graphql -x node --inspect src",
    "format": "npm run prettier && npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|yml|yaml|css|less|ts|md|graphql|mdx)\"",
    "start": "nodemon --config nodemon.json -e js,graphql -x node src",
    "test": "npm run type && jest",
    "type": "tsc --pretty"
  },
  "license": "MIT",
  "main": "src/index.js",
  "author": "Mark Hernandez <mark@lion-byte.com>",
  "devDependencies": {
    "@lionbyte/eslint-config": "^1.2.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^12.12.8",
    "@types/sanitize-html": "^1.20.2",
    "eslint": "^6.6.0",
    "graphql-cli": "^3.0.14",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-runner-eslint": "^0.7.5",
    "lint-staged": "^9.4.3",
    "nodemon": "^1.19.4",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "apollo-server-express": "^2.9.9",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^14.5.8",
    "graphql-import": "^0.7.1",
    "jsonwebtoken": "^8.5.1",
    "prisma": "^1.34.10",
    "prisma-binding": "^2.3.16",
    "sanitize-html": "^1.20.1"
  }
}
